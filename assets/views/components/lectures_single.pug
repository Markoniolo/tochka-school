  const lecturesDefaultList = [
    'Учитель года Воронежской области в 2022 году.',
    'Призер Всероссийского конкурса «Мои инновации в образовании-2017».',
    'Почетная грамота департамента образования, науки и молодежной политики Воронежской области, 2018.',
    'Финалист Всероссийского конкурса «Учитель года России-2022».',
    'Педагогический стаж 10 лет.',
    'Учитель года Воронежской области в 2022 году.',
    'Призер Всероссийского конкурса «Мои инновации в образовании-2017».',
    'Почетная грамота департамента образования, науки и молодежной политики Воронежской области, 2018.',
    'Финалист Всероссийского конкурса «Учитель года России-2022».',
    'Педагогический стаж 10 лет.',
  ]

mixin lectures_single (mod,title='Учитель',list=lecturesDefaultList,name='Бабенко Анна Юрьевна',image='/assets/img/lectures/lectures-1.png',imageMob='/assets/img/lectures/lectures-1_mob.png')
  .lectures.lectures_single(class = mod ? mod : false)
    .container
      h2.lectures__title.title= title
      .lectures__area
        .lectures__inner
          picture.lectures__picture
            source(srcset=imageMob media="(max-width: 992px)")
            img.lectures__image(src=image alt='')
          .lectures__box(data-element="lectures__box")
            .lectures__box-inner
              .lectures__name= name
              ul.lectures__list(data-element=mod === 'teacher' ? "lectures__list" : false)
                each item in list
                  li= item
              .lectures__bottom
                button.lectures__more(data-element="lectures__more") Показать полностью
